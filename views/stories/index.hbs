<h1>Stories</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{!-- STEP 79 applico helper per editare storie proprie => STEP 80 modifico css dell icon per rimpicciolirla --}}
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    {{!-- STEP 75 applico gli helpers stripTags e truncate a body => STEP 76 aggiungo un altro helper per le icone nelle pub/priv nelle card--}}
                    <p>{{stripTags (truncate body 50)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/stories/user/{{user._id}}">
                            {{user.displayName}}
                        </a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No Stories to display</p>
    {{/each}}
</div>